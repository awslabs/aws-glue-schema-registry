{
  "type": "record",
  "name": "order_v3",
  "doc": "Third forward evolution - added 'timestamp' field, demonstrates FORWARD_ALL compatibility",
  "fields": [
    {
      "name": "id",
      "type": "string",
      "doc": "Order identifier"
    },
    {
      "name": "total",
      "type": "int",
      "doc": "Order total amount"
    },
    {
      "name": "currency",
      "type": "string",
      "default": "USD",
      "doc": "Currency code"
    },
    {
      "name": "status",
      "type": "string",
      "doc": "Order processing status"
    },
    {
      "name": "timestamp",
      "type": "long",
      "doc": "Order creation timestamp"
    }
  ]
}
