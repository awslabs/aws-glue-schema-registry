<suppressions>
    <!-- Suppress TODO comments as they are informational -->
    <suppress checks="TodoComment" files=".*\.java"/>
    
    <!-- Allow more than 4 parameters for native interop methods -->
    <suppress checks="ParameterNumber" files=".*Handler\.java"/>
    
    <!-- Allow underscore naming for C interop types and variables -->
    <suppress checks="TypeName" files="DataTypes\.java"/>
    <suppress checks="ParameterName" files=".*Handler\.java"/>
    <suppress checks="LocalVariableName" files=".*Handler\.java"/>
    
    <!-- Suppress all checkstyle errors for avrodata package -->
    <suppress checks=".*" files=".*avrodata.*\.java"/>
</suppressions>